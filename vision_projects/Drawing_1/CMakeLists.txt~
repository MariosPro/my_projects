cmake_minimum_required(VERSION 2.8)
project( Drawing_1 )
find_package( OpenCV REQUIRED )
add_executable( Drawing_1 Drawing_1.cpp )
add_executable( Drawing_2 Drawing_2.cpp )
add_executable( Drawing_3 Drawing_3.cpp )
add_executable( Drawing_4 Drawing_4.cpp )
target_link_libraries( Drawing_1 ${OpenCV_LIBS} )
target_link_libraries( Drawing_2 ${OpenCV_LIBS} )
target_link_libraries( Drawing_3 ${OpenCV_LIBS} )
