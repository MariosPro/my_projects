cmake_minimum_required(VERSION 2.8)
project( svm )
find_package( OpenCV REQUIRED )
add_executable( introduction_to_svm introduction_to_svm.cpp )
add_executable( non_linear_svms non_linear_svms.cpp )
add_executable( training training.cpp )
add_executable( latentsvm_multidetect latentsvm_multidetect.cpp)
target_link_libraries( introduction_to_svm ${OpenCV_LIBS} )
target_link_libraries( non_linear_svms ${OpenCV_LIBS} )
target_link_libraries( training ${OpenCV_LIBS} )
target_link_libraries( latentsvm_multidetect.cpp ${OpenCV_LIBS} )
